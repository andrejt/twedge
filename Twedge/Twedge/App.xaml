<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Twedge="clr-namespace:Twedge" x:Class="Twedge.App"
             >
    <Application.Resources>
        <Twedge:Configuration x:Key="Theme" />
        
        <Style TargetType="Paragraph">
            <Setter Property="Foreground"
                    Value="White" />
        </Style>

        <Style TargetType="Run">
            <Setter Property="Foreground"
                    Value="White" />
        </Style>
    </Application.Resources>
</Application>
